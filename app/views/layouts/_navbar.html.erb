<div class="w-full h-14 fixed top-0 bg-green-500 z-40">
  <div class="max-w-5xl w-full mx-auto px-8 h-full flex justify-between items-center">
    <%= link_to "Home Page", music_path, class:"bg-indigo-600 p-1 px-2 rounded-lg text-lg text-emerald-50 font-semibold hover:text-amber-200" %>
    <div class="flex gap-4 h-full items-center">
      <% if current_user %>
        <div class="relative" data-controller="dropdown"> <!-- Data controller added for stimulus controller in JS -->
          <%= link_to "#", data: { action: "dropdown#toggle" } do %>
            <div class="w-8 h-8 rounded-full bg-slate-500 p-1">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-full text-white">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
              </svg>
            </div>
          <% end %>
          <div class="w-56 h-56 bg-slate-500 absolute top-11 hidden" data-dropdown-target="menu">

          </div>
        </div>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class:"bg-indigo-600 p-1 px-2 rounded-lg text-lg text-emerald-50 font-semibold hover:text-amber-200" %>
        <%= link_to "Create Account", new_user_registration_path, class:"bg-indigo-600 p-1 px-2 rounded-lg text-lg text-emerald-50 font-semibold hover:text-amber-200" %>
      <% end %>
    </div>
  </div>
</div>
