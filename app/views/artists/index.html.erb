<% content_for :title, "Songs" %>

<div class="mx-auto md:w-2/3 w-full py-10">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center px-5">
    <h1 class="font-bold text-4xl">Songs</h1>
    <%= link_to "New song", new_song_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <%= link_to "Dashboard", authenticated_artist_root_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="songs" class="min-w-full">
    <% if @songs.any? %>
      <% @songs.each do |song| %>
        <%= render song %>
        <p>
          <%= link_to "Show this song", song, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 mb-8 hover:bg-gray-50 inline-block font-medium" %>
        </p>
      <% end %>
    <% else %>
      <p class="text-center my-10">No songs found.</p>
    <% end %>
  </div>
</div>
